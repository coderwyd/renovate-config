{
  "description": "Default preset for use with donny's repos",
  "extends": [
    ":prNotPending",
    ":prConcurrentLimit20",
    ":semanticCommits",
    "docker:enableMajor",
    "npm:unpublishSafe",
    "packages:eslint",
    "helpers:disableTypesNodeMajor",
    ":separatePatchReleases",
    ":automergePatch",
    ":noUnscheduledUpdates",
    "group:monorepos"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "platformCommit": true,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "schedule": ["after 9pm", "before 9am"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "description": "disable package.json > engines update",
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "schedule": "at any time",
      "minimumReleaseAge": "0",
      "matchPackageNames": ["@coderwyd/eslint-config"]
    },
    {
      "description": "automerge minor updates in devDeps",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ]
}
