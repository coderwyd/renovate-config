{
  "description": "Default preset for use with donny's repos",
  "extends": [
    "group:allNonMajor",
    "config:base",
    ":semanticCommits",
    ":rebaseStalePrs",
    "docker:enableMajor",
    "npm:unpublishSafe"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 30,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "schedule": ["after 9pm", "before 9am"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "description": "disable package.json > engines update",
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "schedule": "at any time",
      "minimumReleaseAge": "0",
      "matchPackageNames": ["@coderwyd/eslint-config"]
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "automergeStrategy": "squash"
    }
  ]
}
